<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.nprone"
       name="NPR One"
       version="0.0.1"
       provider-name="Curtis, Mike">
  <requires>
    <import addon="xbmc.python" version="2.1.1"/>
	<import addon="script.module.requests" version="2.9.1"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">NPR (National Public Radio) One</summary>
    <description lang="en">All available NPR streams and most podcasts.</description>
  </extension>
</addon>
